<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Estaremos contestando tus dudas a la brevedad!"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="@android:color/black">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Para:">
        </TextView>

        <EditText
            android:id="@+id/editTextRECEPTOREmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp"
            android:enabled="false"
            android:theme="@style/TextInputColor">
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="4dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Asunto:">
        </TextView>

        <EditText
            android:id="@+id/editTextASUNTOEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp"
            android:theme="@style/TextInputColor">
        </EditText>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="4dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Mensaje:">
        </TextView>

        <EditText
            android:id="@+id/editTextMENSAJEEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:lines="10"
            android:layout_marginTop="2dp"
            android:theme="@style/TextInputColor">
        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/btnEnviarMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:text="Enviar"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary">
    </Button>

    </LinearLayout>

</LinearLayout>