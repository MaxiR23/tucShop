<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v1"
            android:layout_width="230dp"
            android:layout_height="19sp"
            android:layout_centerHorizontal="true"
            android:background="@color/placeholder_bg"/>

        <View
            android:id="@+id/viewSepardor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/lightgray"
            android:layout_below="@+id/v1"/>

        <LinearLayout
            android:id="@+id/linearimgSemana"
            android:layout_below="@+id/viewSepardor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgProductodeSemana"
                android:layout_width="315px"
                android:layout_height="315px"
                android:background="@color/placeholder_bg"/>

        </LinearLayout>

        <View
            android:id="@+id/tvDescuento"
            android:layout_below="@+id/viewSepardor"
            android:layout_toRightOf="@+id/linearimgSemana"
            android:layout_width="265dp"
            android:layout_height="13.5sp"
            android:layout_marginLeft="3dp"
            android:background="@color/placeholder_bg"/>

        <View
            android:id="@+id/tvNombreArticuloDestacado"
            android:layout_width="135dp"
            android:layout_height="18dp"
            android:background="@color/placeholder_bg"
            android:layout_toRightOf="@+id/linearimgSemana"
            android:layout_below="@id/tvDescuento"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"/>

        <View
            android:id="@+id/signoPeso"
            android:layout_width="72dp"
            android:layout_height="19dp"
            android:background="@color/placeholder_bg"
            android:layout_toRightOf="@+id/linearimgSemana"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_below="@+id/tvNombreArticuloDestacado"/>

        <View
            android:id="@+id/signoPeso2"
            android:layout_width="92dp"
            android:layout_height="22sp"
            android:background="@color/placeholder_bg"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/linearimgSemana"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/signoPeso"/>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>